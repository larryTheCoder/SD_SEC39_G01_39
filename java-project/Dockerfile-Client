FROM arm64v8/maven:3-amazoncorretto-17 AS build
WORKDIR /home

COPY client /home/app/client
COPY rpc /home/app/rpc
COPY server /home/app/server
COPY pom.xml /home/app

RUN mvn -f /home/app/pom.xml clean package -pl client -am

FROM arm64v8/amazoncorretto:17

WORKDIR /home

COPY --from=build /home/app/client/target/Client.jar /home

ENTRYPOINT ["java", "-jar", "Client.jar"]